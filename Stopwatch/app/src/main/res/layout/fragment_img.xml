<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/fragment_bckg_img_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/button_text_padding"
        android:contentDescription="" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/set_bckg_image_title"
        android:background="@drawable/button_ripple"
        android:id="@+id/button_set_bckg_image"
        android:padding="@dimen/button_text_padding"
        android:layout_margin="@dimen/element_margin_stopwatch"
        android:layout_gravity="center"/>
</LinearLayout>